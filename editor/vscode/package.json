{
  "version": "THIS_VALUE_WILL_BE_REPLACED_BY_BUILD_SCRIPT",
  "name": "squash",
  "displayName": "Squash",
  "description": "Debug your applications running on Kubernetes",
  "publisher": "ilevine",
  "author": {
    "name": "solo.io",
    "email": "idit.levine@solo.io",
    "url": "https://www.solo.io"
  },
  "homepage": "https://github.com/solo-io/squash",
  "bugs": {
    "url": "https://github.com/solo-io/squash/issues"
  },
  "icon": "images/Squash.png",
  "galleryBanner": {
    "color": "#4a4a4a",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/badge/chat-on%20slack-brightgreen.svg",
      "href": "http://slack.solo.io",
      "description": "Chat at solo.io slack channel"
    }
  ],
  "keywords": [
    "docker",
    "debugger",
    "container",
    "microservices",
    "kubernetes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/solo-io/squash.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.debugPod"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "title": "Squash config",
      "properties": {
        "squash.path": {
          "type": "string",
          "default": null,
          "description": "path to squashctl. This is mainly used for development. By default, the correct binary will be downloaded automatically."
        },
        "squash.remotePath": {
          "type": "string",
          "default": null,
          "description": "Path of the source files in the remote executable."
        },
        "squash.verbose": {
          "type": "boolean",
          "default": false,
          "description": "If set, prints diagnostic information related to the extension."
        },
        "squash.extraArgs": {
          "type": "string",
          "default": null,
          "description": "Extra arguments to pass to the squashctl binary."
        },
        "squash.kubeConfig": {
          "type": "string",
          "default": null,
          "description": "Path kubeconfig file to use to talk with kubernetes."
        },
        "squash.processName": {
          "type": "string",
          "default": null,
          "description": "optional, if passed, Squash will try to find a process in the target container that matches (regex, case-insensitive) this string. Otherwise Squash chooses the first process."
        }
      }
    },
    "commands": [
      {
        "command": "extension.debugPod",
        "title": "Squash - debug pod"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "shelljs": "^0.7.8",
    "download": "^7.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "@types/shelljs": "^0.7.9",
    "tslint": "^5.8.0",
    "typescript": "^3.2.0",
    "vscode": "^1.1.26"
  }
}
